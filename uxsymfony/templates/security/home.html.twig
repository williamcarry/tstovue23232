{% extends 'base.html.twig' %}

{% block title %}欢迎页面{% endblock %}

{% block body %}
<div class="home-container">
    <div class="">
    coming soon...
    </div>
</div>

<style>
/* 全局重置 */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

html, body {
    height: 100%;
    width: 100%;
    margin: 0;
    padding: 0;
    overflow: hidden; /* 防止滚动条 */
}

.home-container {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 100vh;
    width: 100vw;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    margin: 0;
    padding: 0;
}

.welcome-card {
    background: white;
    border-radius: 10px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
    padding: 2rem;
    text-align: center;
    max-width: 500px;
    width: 90%;
    margin: 0;
}

.welcome-card h1 {
    color: #333;
    margin-bottom: 1rem;
    font-size: 2rem;
}

.welcome-card p {
    color: #666;
    margin-bottom: 2rem;
    font-size: 1.1rem;
}

.login-options {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-bottom: 2rem;
}

.login-button {
    display: block;
    padding: 1rem 2rem;
    text-decoration: none;
    border-radius: 5px;
    font-weight: bold;
    transition: all 0.3s ease;
    font-size: 1.1rem;
    border: none;
    cursor: pointer;
}

.admin-button {
    background: #4CAF50;
    color: white;
}

.admin-button:hover {
    background: #45a049;
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(76, 175, 80, 0.3);
}

.supplier-button {
    background: #2196F3;
    color: white;
}

.supplier-button:hover {
    background: #1976D2;
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(33, 150, 243, 0.3);
}

.system-info {
    border-top: 1px solid #eee;
    padding-top: 1rem;
}

.system-info h3 {
    color: #333;
    margin-bottom: 1rem;
}

.system-info ul {
    list-style: none;
    padding: 0;
    text-align: left;
}

.system-info li {
    color: #666;
    margin-bottom: 0.5rem;
}

/* 响应式设计 */
@media (max-width: 768px) {
    .welcome-card {
        padding: 1.5rem;
    }
    
    .welcome-card h1 {
        font-size: 1.5rem;
    }
    
    .login-options {
        gap: 0.8rem;
    }
    
    .login-button {
        padding: 0.8rem 1.5rem;
        font-size: 1rem;
    }
}
</style>
{% endblock %}