{% extends 'base.html.twig' %}

{% block title %}{{ login_title|default('Login') }}{% endblock %}

{% block body %}
<div class="login-container">
    <form class="login-form" method="post">
        <div class="title-container">
            <h3 class="title">{{ login_title|default('Login Form') }}</h3>
        </div>

        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        
        <div class="form-item">
            <span class="svg-container">
                <i class="icon-user"></i>
            </span>
            <input
                type="text"
                id="username"
                name="_username"
                placeholder="Username"
                value="{{ last_username }}"
                required
                autofocus
                class="form-input"
            />
        </div>

        <div class="form-item">
            <span class="svg-container">
                <i class="icon-password"></i>
            </span>
            <input
                type="password"
                id="password"
                name="_password"
                placeholder="Password"
                required
                class="form-input"
            />
            <!-- ç§»é™¤äº†å¯†ç æ˜¾ç¤º/éšè—å›¾æ ‡ -->
        </div>
        
        <div class="form-item captcha-item">
            <span class="svg-container">
                <i class="icon-captcha"></i>
            </span>
            <input
                type="text"
                id="captcha"
                name="_captcha"
                placeholder="Captcha"
                required
                class="form-input captcha-input"
            />
            <span class="captcha-container">
                <img id="captcha-image" src="{{ path('app_captcha') }}" alt="Captcha" onclick="refreshCaptcha()" />
            </span>
        </div>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        
        <button type="submit" class="login-button">Login</button>
    </form>
</div>

