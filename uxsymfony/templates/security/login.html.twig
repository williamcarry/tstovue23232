{% extends 'base.html.twig' %}

{% block title %}{{ login_title|default('Login') }}{% endblock %}

{% block body %}
<div class="login-container">
    <form class="login-form" method="post">
        <div class="title-container">
            <h3 class="title">{{ login_title|default('Login Form') }}</h3>
        </div>

        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        
        <div class="form-item">
            <span class="svg-container">
                <i class="icon-user"></i>
            </span>
            <input
                type="text"
                id="username"
                name="_username"
                placeholder="Username"
                value="{{ last_username }}"
                required
                autofocus
                class="form-input"
            />
        </div>

        <div class="form-item">
            <span class="svg-container">
                <i class="icon-password"></i>
            </span>
            <input
                type="password"
                id="password"
                name="_password"
                placeholder="Password"
                required
                class="form-input"
            />
            <!-- 移除了密码显示/隐藏图标 -->
        </div>
        
        <div class="form-item captcha-item">
            <span class="svg-container">
                <i class="icon-captcha"></i>
            </span>
            <input
                type="text"
                id="captcha"
                name="_captcha"
                placeholder="Captcha"
                required
                class="form-input captcha-input"
            />
            <span class="captcha-container">
                <img id="captcha-image" src="{{ path('app_captcha') }}" alt="Captcha" onclick="refreshCaptcha()" />
            </span>
        </div>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        
        <button type="submit" class="login-button">Login</button>
    </form>
</div>

<style>
/* Base styles */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

html, body {
    height: 100%;
    margin: 0;
    padding: 0;
}

body {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
    background-color: #283443; /* 恢复为原来的深色背景 */
}

.login-container {
    min-height: 100vh;
    width: 100vw;
    background-color: #283443; /* 恢复为原来的深色背景 */
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0;
    padding: 0;
}

.login-form {
    position: relative;
    width: 100%;
    max-width: 520px;
    padding: 80px 35px 40px;
    margin: 0 auto;
    background: #2d3a4b; /* 恢复为原来的深色背景 */
    min-height: auto;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
}

.title-container {
    position: relative;
    text-align: center;
    margin-bottom: 40px;
}

.title {
    font-size: 26px;
    color: #eee; /* 恢复为原来的浅色文字 */
    margin: 0 auto;
    font-weight: bold;
}

.form-item {
    position: relative;
    margin-bottom: 20px;
    border: 1px solid rgba(255, 255, 255, 0.1); /* 恢复为原来的边框 */
    background: rgba(0, 0, 0, 0.1); /* 恢复为原来的背景 */
    color: #454545;
    display: flex;
    align-items: center;
    border-radius: 0;
}

.svg-container {
    padding: 6px 5px 6px 15px;
    color: #889aa4; /* 恢复为原来的图标颜色 */
    vertical-align: middle;
    width: 30px;
    display: inline-block;
    font-size: 16px;
}

.form-input {
    background: transparent;
    border: 0px;
    -webkit-appearance: none;
    border-radius: 0px;
    padding: 12px 5px 12px 15px;
    color: #fff; /* 恢复为原来的白色文字 */
    height: 47px;
    caret-color: #fff; /* 恢复为原来的白色光标 */
    width: calc(100% - 60px);
    font-size: 14px;
    box-sizing: border-box;
}

.form-input:focus {
    outline: none;
}

.form-input:-webkit-autofill {
    box-shadow: 0 0 0px 1000px #283443 inset !important;
    -webkit-text-fill-color: #fff !important;
}

/* 移除了.show-pwd样式 */

.captcha-item {
    position: relative;
    display: flex;
    align-items: center;
}

.captcha-input {
    width: calc(100% - 60px); /* 调整为与普通输入框相同的宽度计算方式 */
}

.captcha-container {
    position: absolute;
    right: 5px; /* 定位到输入框右侧 */
    cursor: pointer;
    height: 47px;
    display: flex;
    align-items: center;
}

.captcha-container img {
    height: 47px;
    width: 120px;  /* 保持图片宽度 */
    border: none;
    border-radius: 0;
    object-fit: cover;  /* 保持图片比例 */
}

.login-button {
    width: 100%;
    margin-bottom: 30px;
    background: #409EFF; /* 保持原来的蓝色按钮 */
    border: none;
    color: white;
    padding: 12px 20px;
    font-size: 14px;
    cursor: pointer;
    transition: all 0.3s;
    border-radius: 0;
}

.login-button:hover {
    background: #66b1ff;
}

.alert {
    padding: 12px 15px;
    margin-bottom: 20px;
    background: #C03639; /* 保持原来的红色错误提示 */
    color: white;
    font-size: 14px;
}

.tips {
    font-size: 14px;
    color: #fff; /* 恢复为原来的白色文字 */
    text-align: center;
}

.tips p {
    margin: 10px 0;
}

.icon-user:before {
    content: "👤";
}

.icon-password:before {
    content: "🔒";
}

.icon-captcha:before {
    content: "🧩";
}

/* Responsive design */
@media (max-width: 768px) {
    .login-form {
        padding: 60px 20px 30px;
    }
    
    .title {
        font-size: 22px;
    }
    
    .form-item {
        margin-bottom: 15px;
    }
    
    .tips {
        font-size: 12px;
    }
    
    .tips p {
        margin: 8px 0;
    }
    
    .captcha-container img {
        width: 100px;  /* 在小屏幕上调整宽度 */
    }
}

@media (max-width: 480px) {
    .login-form {
        padding: 50px 15px 20px;
    }
    
    .title {
        font-size: 20px;
    }
    
    .captcha-input {
        width: calc(100% - 60px); /* 在小屏幕上保持一致 */
    }
    
    .captcha-container img {
        width: 80px;  /* 在更小的屏幕上调整宽度 */
    }
}
</style>

<script>
function refreshCaptcha() {
    document.getElementById('captcha-image').src = '{{ path('app_captcha') }}?' + Math.random();
}

// Check for caps lock
document.addEventListener('DOMContentLoaded', function() {
    const passwordInput = document.getElementById('password');
    
    passwordInput.addEventListener('keyup', function(e) {
        const key = e.key;
        const capsLockOn = key && key.length === 1 && (key >= 'A' && key <= 'Z');
        
        // You can add caps lock indicator here if needed
    });
});
</script>
{% endblock %}